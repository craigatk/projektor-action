{
  "name": "projektor-github-action",
  "version": "0.0.1",
  "description": "GitHub action for publishing test results to Projektor",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "build": "ncc build index.js",
    "format": "prettier --write *.js src/**/*.js"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "https://github.com/craigatk/projektor.git"
  },
  "author": "Craig Atkinson",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.2.4",
    "@actions/github": "2.2.0",
    "projektor-publish": "2.2.2"
  },
  "devDependencies": {
    "@zeit/ncc": "0.22.3",
    "jest": "26.0.1",
    "jest-junit": "10.0.0",
    "mock-http-server": "1.4.2",
    "prettier": "2.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "outputDirectory": "test-results",
    "includeConsoleOutput": "true"
  }
}
